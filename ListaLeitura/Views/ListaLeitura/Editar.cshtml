@model ListaLeituraModel

@{
    ViewData["title"] = "Editar Leitura";
}

<div class="container bg-dark p-5 rounded-3">

    <div class="mb-5 text-center text-light">
        <h1>Editar Leitura</h1>
    </div>

    <form method="post" asp-controller="ListaLeitura" asp-action="Editar">

        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label for="Nome" class="form-label text-light">Nome do Livro</label>
            <input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="Nome do Livro" />
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="mb-3">
            <label for="Autor" class="form-label text-light">Autor</label>
            <input type="text" class="form-control" asp-for="Autor" id="Autor" placeholder="Autor do Livro" />
            <span class="text-danger" asp-validation-for="Autor"></span>
        </div>
        <div class="mb-3">
            <label for="Status" class="form-label text-light">Status</label>
            <select class="form-select" asp-for="Status" aria-label="Selecione o status">
                <option selected>Selecione o Status</option>
                <option value="0">Concluído</option>
                <option value="1">Lendo</option>
                <option value="2">Pausado</option>
                <option value="3">Abandonado</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="AnoLeitura" class="form-label text-light">Ano da Leitura</label>
            <input type="text" class="form-control" asp-for="AnoLeitura" id="AnoLeitura" placeholder="Ano da Leitura" />
            <span class="text-danger" asp-validation-for="AnoLeitura"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Salvar</button>
            <a class="btn btn-primary w-50" asp-controller="ListaLeitura" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>