@model ListaLeituraModel

@{
    ViewData["title"] = "Excluir Leitura";
}

<div class="container bg-dark p-5 rounded-3">

    <div class="mb-5 text-center text-light">
        <h1>Excluir Leitura</h1>
    </div>

    <form method="post" asp-controller="ListaLeitura" asp-action="Excluir">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label for="Nome" class="form-label text-light">Nome do Livro</label>
            <input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="Nome do Livro" readonly/>
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="mb-3">
            <label for="Autor" class="form-label text-light">Autor</label>
            <input type="text" class="form-control" asp-for="Autor" id="Autor" placeholder="Autor do Livro" readonly/>
            <span class="text-danger" asp-validation-for="Autor"></span>
        </div>
        <div class="mb-3">
            <label for="Status" class="form-label text-light">Status</label>
            <input type="text" class="form-control" asp-for="Status" id="Status" placeholder="Autor do Livro" readonly/>
            <span class="text-danger" asp-validation-for="Status"></span>
        </div>
        <div class="mb-3">
            <label for="AnoLeitura" class="form-label text-light">Ano da Leitura</label>
            <input type="text" class="form-control" asp-for="AnoLeitura" id="AnoLeitura" placeholder="Ano da Leitura" readonly/>
            <span class="text-danger" asp-validation-for="AnoLeitura"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="ListaLeitura" asp-action="Index">Voltar</a>
        </div>
    </form>

</div>
